<?xml version="1.0"?>
<!--
DDT Motor Controller単体起動用ランチファイル
-->
<launch>
    <!-- Launch Arguments -->
    <arg name="use_sim_time" default="false" description="Use simulation time" />

    <!-- DDT Motor Controller Node -->
    <node pkg="ddt_motor_control" exec="ddt_motor_controller_node.py" name="ddt_motor_controller" output="screen">
        <param name="use_sim_time" value="$(var use_sim_time)" />
    </node>

</launch>
