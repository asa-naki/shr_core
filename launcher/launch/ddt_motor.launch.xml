<?xml version="1.0"?>
<!--
DDT Motor Controller単体起動用ランチファイル
-->
<launch>
  <!-- Launch Arguments -->
  <arg name="use_sim_time" default="false" description="Use simulation time" />
  <arg name="joy_device" default="/dev/input/js0" description="Joystick device path" />

  <!-- Joy node -->
  <node pkg="joy" exec="joy_node" name="joy_node" output="screen">
    <param name="dev" value="$(var joy_device)" />
    <param name="deadzone" value="0.05" />
    <param name="autorepeat_rate" value="20.0" />
    <param name="use_sim_time" value="$(var use_sim_time)" />
  </node>

  <!-- Joy to Twist Node -->
  <node pkg="joy_to_twist" exec="joy_to_twist_node" name="joy_to_twist" output="screen">
    <param name="use_sim_time" value="$(var use_sim_time)" />
  </node>

  <!-- Include DDT Motor Controller Component Launch -->
  <include file="$(find-pkg-share ddt_motor_control_cpp)/launch/ddt_motor_controller_component.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)" />
  </include>

</launch>
